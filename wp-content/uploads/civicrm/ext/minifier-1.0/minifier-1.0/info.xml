<?xml version="1.0"?>
<extension key="minifier" type="module">
  <file>minifier</file>
  <name>CSS/JS minifier for AssetBuilder</name>
  <description>Minifies CSS/JS assets that are generated using CiviCRM AssetBuilder</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Matthew Wire</author>
    <email>mjw@mjwconsult.co.uk</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://lab.civicrm.org/extensions/minifier</url>
    <url desc="Support">https://mjw.pt/support/minifier</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2020-12-14</releaseDate>
  <version>1.2</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.28</ver>
  </compatibility>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Minifier</namespace>
  </civix>
</extension>
